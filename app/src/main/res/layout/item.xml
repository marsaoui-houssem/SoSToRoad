<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E1DFDF">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintBottom_toTopOf="@+id/phoneitm"
        app:layout_constraintEnd_toStartOf="@+id/nameitm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/phoneitm"
        app:srcCompat="@drawable/placeholder" />

    <TextView
        android:id="@+id/nameitm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/phoneitm"
        app:layout_constraintEnd_toStartOf="@+id/details"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/phoneitm"
        android:layout_width="124dp"
        android:layout_height="0dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameitm" />

    <Button
        android:id="@+id/details"
        android:layout_width="0dp"
        android:layout_height="74dp"
        android:layout_marginEnd="16dp"
        android:text="details"
        app:layout_constraintBottom_toTopOf="@+id/phoneitm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nameitm"
        app:layout_constraintTop_toTopOf="@+id/phoneitm" />
</androidx.constraintlayout.widget.ConstraintLayout>